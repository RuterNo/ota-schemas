{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$ref": "#/definitions/DPIResourcesManifest",
    "definitions": {
        "DPIResourcesManifest": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "timestamp": {
                    "type": "string",
                    "format": "date-time"
                },
                "environment": {
                    "type": "string"
                },
                "resources": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Resource"
                    }
                }
            },
            "required": [
                "environment",
                "resources",
                "timestamp"
            ],
            "title": "DPIResourcesManifest"
        },
        "Resource": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                },
                "type": {
                    "type": "string"
                },
                "contentType": {
                    "type": "string"
                },
                "url": {
                    "type": "string",
                    "format": "uri",
                    "qt-uri-protocols": [
                        "https"
                    ]
                },
                "sha256": {
                    "type": "string"
                },
                "version": {
                    "type": "string",
                    "format": "date-time"
                },
                "description": {
                    "type": "string"
                }
            },
            "required": [
                "name",
                "type",                
                "contentType",
                "url",
                "sha256",
                "version"
            ],
            "title": "Resource"
        }
    }
}
